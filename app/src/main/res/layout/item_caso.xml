<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="12dp"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ===== Linha 1: Previsão (esq) | Chip Etapa (dir) ===== -->
        <LinearLayout
            android:id="@+id/rowPrev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Previsão -->
            <TextView
                android:id="@+id/lblPrevisao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/previsao"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/tvDatas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                tools:text="12/04/2024" />

            <!-- Espaço flexível para empurrar o chip para a direita -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Chip Etapa (aspecto de label) -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipEtapa"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="false"
                android:clickable="false"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                app:chipIconVisible="false"
                app:chipStrokeWidth="0dp"
                app:ensureMinTouchTargetSize="false"
                tools:text="Processamento" />
        </LinearLayout>


        <!-- ===== Linha 2: Paciente | Sexo ===== -->
        <LinearLayout
            android:id="@+id/rowPacienteLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@id/rowPacienteRight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rowPrev">

            <TextView
                android:id="@+id/lblPaciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paciente"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/tvPaciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                tools:text="João Silva" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowPacienteRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rowPacienteLeft"
            app:layout_constraintTop_toBottomOf="@id/rowPrev">

            <TextView
                android:id="@+id/lblSexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sexo"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/valSexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                tools:text="Masculino" />
        </LinearLayout>

        <!-- ===== Linha 3: Idade | Prontuário ===== -->
        <LinearLayout
            android:id="@+id/rowIdadeLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@id/rowIdadeRight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rowPacienteLeft">

            <TextView
                android:id="@+id/lblIdade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/idade"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/valIdade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                tools:text="30 a 2 m" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowIdadeRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rowIdadeLeft"
            app:layout_constraintTop_toBottomOf="@id/rowPacienteRight">

            <TextView
                android:id="@+id/lblProntuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prontuario"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/valProntuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                tools:text="1023489" />
        </LinearLayout>

        <!-- ===== Linha 4: SUS ===== -->
        <LinearLayout
            android:id="@+id/rowSus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rowIdadeLeft">

            <TextView
                android:id="@+id/lblSus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUS:"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/valSus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                tools:text="10248192489214" />
        </LinearLayout>

        <!-- ===== Linha 5: Nº Exame ===== -->
        <LinearLayout
            android:id="@+id/rowExame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rowSus">

            <TextView
                android:id="@+id/lblExame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textviewNumeroExame"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/tvNumeroExame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                tools:text="1029xkj210" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
